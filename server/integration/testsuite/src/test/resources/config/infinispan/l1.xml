        <subsystem xmlns="urn:infinispan:server:core:8.4" >
            <cache-container 
                name="clustered"
                default-cache="memcachedCache">
                <transport
                    lock-timeout="240000"/>
                <distributed-cache
                    name="memcachedCache"
                    owners="1"
                    l1-lifespan="2000">
                </distributed-cache>
            </cache-container>
        </subsystem>
