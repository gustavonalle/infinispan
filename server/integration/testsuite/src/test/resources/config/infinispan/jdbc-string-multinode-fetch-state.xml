       <subsystem xmlns="urn:infinispan:server:core:8.4" >
            <cache-container name="clustered" default-cache="memcachedCache">
                <transport
                        lock-timeout="240000"/>
                <replicated-cache
                    name="memcachedCache"
                    batching="false"
                    remote-timeout="60000">
                    <state-transfer
                        enabled="true"
                        timeout="60000" />
                    <eviction 
                        strategy="LRU" 
                        max-entries="2" />
                    <string-keyed-jdbc-store
                        datasource="${jndi.name}"
                        dialect="${database.type}"
                        fetch-state="true"
                        passivation="true"
                        preload="false"
                        purge="false"
                        shared="false"
                        singleton="false" name="FETCH_STATE">
                        <string-keyed-table prefix="${table.prefix}">
                            <id-column name="id" type="${id.column.type}"/>
                            <data-column name="datum" type="${data.column.type}"/>
                            <timestamp-column name="version" type="${timestamp.column.type}"/>
                        </string-keyed-table>
                    </string-keyed-jdbc-store>
                </replicated-cache>
            </cache-container>
           <cache-container name="security"/>
        </subsystem>
